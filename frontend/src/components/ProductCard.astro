---
import type { Producto } from '../types/producto';

interface Props {
  producto: Producto;
}

const { producto } = Astro.props;
---

<article class="product-card">
  <div class="product-image">
    <span class="product-emoji">ðŸ¥¤</span>
    {producto.catidades < 10 && (
      <span class="badge badge-low">Pocas unidades</span>
    )}
  </div>
  
  <div class="product-info">
    <h3 class="product-name">{producto.nombre}</h3>
    <p class="product-description">{producto.descripcion}</p>
    
    <div class="product-footer">
      <div class="product-price">
        <span class="price-label">Precio</span>
        <span class="price-value">${producto.precio.toFixed(2)}</span>
      </div>
      
      <div class="product-stock">
        <span class="stock-icon">ðŸ“¦</span>
        <span class="stock-text">{producto.catidades} disponibles</span>
      </div>
    </div>
    
    <div class="product-actions">
      <a href={`/productos/${producto.idProductos}`} class="btn-view">
        Ver Detalles
      </a>
    </div>
  </div>
</article>

<style>
  .product-card {
    background: var(--white);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 12px var(--shadow);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px var(--shadow);
  }

  .product-image {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .product-emoji {
    font-size: 80px;
    animation: bounce 2s ease-in-out infinite;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .badge {
    position: absolute;
    top: 15px;
    right: 15px;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
  }

  .badge-low {
    background: #ff6b6b;
    color: white;
  }

  .product-info {
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    flex: 1;
  }

  .product-name {
    font-size: 22px;
    font-weight: 700;
    color: var(--text);
    margin: 0;
  }

  .product-description {
    color: var(--text-light);
    font-size: 14px;
    line-height: 1.6;
    flex: 1;
  }

  .product-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 12px;
    border-top: 2px solid var(--border);
  }

  .product-price {
    display: flex;
    flex-direction: column;
  }

  .price-label {
    font-size: 12px;
    color: var(--text-light);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .price-value {
    font-size: 24px;
    font-weight: 700;
    color: var(--primary);
  }

  .product-stock {
    display: flex;
    align-items: center;
    gap: 6px;
    background: var(--bg);
    padding: 8px 12px;
    border-radius: 8px;
  }

  .stock-icon {
    font-size: 18px;
  }

  .stock-text {
    font-size: 13px;
    font-weight: 600;
    color: var(--text-light);
  }

  .product-actions {
    margin-top: 12px;
  }

  .btn-view {
    display: block;
    width: 100%;
    padding: 12px;
    background: var(--primary);
    color: white;
    text-align: center;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-view:hover {
    background: var(--primary-dark);
    transform: translateY(-2px);
  }
</style>